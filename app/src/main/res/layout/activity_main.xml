<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/Relativelayout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Relativesnap">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:src="@drawable/profile"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="5dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:src="@drawable/gray"
        android:layout_marginHorizontal="74dp"
        android:layout_marginVertical="9dp"/>


    <ImageView
        android:layout_width="28dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_baseline_search_24"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginVertical="11dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginHorizontal="170dp"
        android:text="Chat"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingLeft="7dp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:src="@drawable/gray"
        android:layout_marginHorizontal="310dp"
        android:layout_marginVertical="7dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_baseline_person_add_24"
        android:layout_marginHorizontal="315dp"
        android:layout_marginVertical="13dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="37dp"
        android:layout_height="52dp"
        android:src="@drawable/gray"
        android:layout_marginHorizontal="360dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_baseline_rate_review_24"
        android:layout_marginHorizontal="365dp"
        android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/Listviewsnap"
        android:layout_width="match_parent"
        android:layout_height="626dp"
        android:layout_below="@id/Relativesnap"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/stylesnap"
        android:backgroundTint="@color/black"
        android:layout_below="@id/Listviewsnap">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_baseline_location_on_24"
            android:layout_marginHorizontal="20dp"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_baseline_mode_comment_24"
            android:layout_marginVertical="2dp"

            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:layout_marginHorizontal="35dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_group_24"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>




</RelativeLayout>