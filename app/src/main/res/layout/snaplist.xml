<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImageSnap"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/girl1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtsnap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayali Kadam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginHorizontal="85dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/redsnap"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/red"
        android:layout_marginVertical="34dp"
        android:background="@drawable/squarecurve"
        android:layout_marginHorizontal="90dp"/>

    <TextView
        android:id="@+id/Txtsnap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New snap"
        android:textSize="14dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="106dp" />


    <TextView
        android:id="@+id/Txtsnap3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".12h "
        android:textSize="15dp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="15dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginVertical="29dp"
        android:layout_marginHorizontal="215dp"/>


    <TextView
        android:id="@+id/txtsnap4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginVertical="28dp"
        android:layout_marginHorizontal="235dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/fire"
        android:layout_marginVertical="27dp"
        android:layout_marginHorizontal="255dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="30dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginHorizontal="340dp"
        android:layout_marginVertical="5dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        android:layout_marginHorizontal="355dp"
        android:layout_marginVertical="13dp"/>

    
</RelativeLayout>